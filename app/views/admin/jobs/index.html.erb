<div class="pull-right">
  <div class="button">
    <%= link_to("Add a job", new_admin_job_path, class: "btn btn-primary") %>
  </div>
</div>
<br><br><br>
<table class="table table-bordered">
  <thead>
      <tr>
          <th> Job </th>
          <th> Resume </th>
          <th> Option</th>
      </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
        <td>
          <%= render_job_status(job)%>
          <%= link_to(job.title, job_path(job)) %>
        </td>
        <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
        <td>
          <%= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-sm btn-success") %>
          <%= link_to("Delete", admin_job_path(job), method: :delete, :data => { :confirm => "Are you sure"}, :class => "btn btn-sm btn-danger") %>

          <% if job.is_hidden %>
            <%= link_to("Publish", publish_admin_job_path(job), method: :post, :class => "btn btn-sm btn-success") %>
          <% else %>
            <%= link_to("Hide", hide_admin_job_path(job), method: :post, :class => "btn btn-sm btn-success") %>
          <% end %>
        </td>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>
