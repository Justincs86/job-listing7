<div class="pull-right">
  <div class="button">
    <%= link_to("Add a job", new_job_path, class: "btn btn-default") %>
  </div>
</div>
<br><br><br>
<table class="table table-bordered">
  <thead>
      <tr>
          <th> Job </th>
          <th> Description</th>
          <th> Option</th>
      </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
        <td> <%= link_to(job.title, job_path(job)) %> </td>
        <td> <%= job.description %> </td>
        <td>
          <%= link_to("Edit", edit_job_path(job), :class => "btn btn-sm btn-success") %>
          <%= link_to("Delete", job_path(job), method: :delete, :data => { :confirm => "Are you sure"}, :class => "btn btn-sm btn-danger") %>
        </td>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>
